<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "shop1" class = "soft.dev.academy.spring.Shop">
        <property name = "name" value = "Biedronka test"/>
    </bean>

    <bean id="shop2" class="soft.dev.academy.spring.Shop" scope="prototype">
        <property name="name" value="Piotr i Pawel"/>
    </bean>

    <bean id="shopBasket" class="soft.dev.academy.spring.ShopBasket">
        <constructor-arg name="name" value="moj koszyk"/>
    </bean>

    <bean id="orderDao" class="soft.dev.academy.spring.OrderDaoImpl">
    </bean>

    <bean id="orderDaoInMemory" class="soft.dev.academy.spring.OrderDaoInMemoryImpl">
    </bean>

    <bean id="orderService" class="soft.dev.academy.spring.OrderServiceImpl">
        <property name="orderDao" ref="orderDaoInMemory"/>
    </bean>

</beans>